<div class="hero C">
    <div class="heroImage CImage"><h1>Contact Wild Roots</h1></div>
</div>

<div class="container">
    <div class="companyInfo">
        <h1 class="heading">Get in touch </h1>
        <ul>
            <li><span>Call</span> 0330 128 1591</li>
            <li><span>Email</span> theteam@wildrootskitchenandbar.co.uk</li>
        </ul>
    </div>
    <div class="contact">
        <form action= "send" method="POST" class="form" role="form">
            <div class="success"></div>
            <p class="fName">
                <label for="fname">First Name</label>
                <input type="text" id="fname" name="fname" required>
                <br>
            </p>
            <p class="lName">
                <label for="lname">Last Name</label>
                <input type="text" id="lname" name="lname" required>
                <br>
            </p>
            <p class="phone">
                <label for="phone">Phone Number</label>
                <input type="tel" id="phone" name="phone" required>
                <br>
            </p>
            <p class="email">
                <label for="email">Email</label>
                <input type="email" id="email" name="email" required>
                <br>
            </p>
            <p class="subject">
                <label for="subject">Subject</label>
                <input type="text" id="subject" name="subject">
                <br>
            </p>
            <p class="event">
                <label for="event">Date of Event</label>
                <input type="date" id="event" name="event">
                <br>
            </p>
            <p class="message">
                <label for="message">Message</label>
                <textarea type="text" id="message" name="message" rows="14" required></textarea>
                <br>
            </p>
            <p>
                <button type="submit" value="send" name="submit">Submit</button>
            </p>
        </form>
    </div>
</div>