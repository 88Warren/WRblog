<% layout('partials/boilerplate') %>

<div class="hero B">
    <div class="heroImage BImage"><h1><%= blog.title %></h1></div>
</div>
<div>
    <img src="<%= blog.image %>" alt="">
</div>
<div>
    <p><%= blog.markdown %></p>
</div>
<div>
    <a href="/blogs/<%= blog._id %>/edit"><button>Edit</button></a>
    <form action="/blogs/<%= blog._id %>?_method=DELETE" method="POST""><button>Delete</button></form>
</div>
<div>
    <a href="/blogs">All Blogs</a>
</div>
    